{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "background": "white",
  "width": 950,
  "height": 550,
  "padding": 5,
  "title": {
    "text": "Top 100 Global Football Stadiums by Capacity (2024)",
    "subtitle": "The world's largest football cathedrals",
    "fontSize": 22,
    "color": "#1e293b"
  },
  "data": [
    {"name": "world", "url": "https://raw.githubusercontent.com/vega/vega-datasets/master/data/world-110m.json", "format": {"type": "topojson", "feature": "countries"}},
    {"name": "graticule", "transform": [{"type": "graticule", "step": [20, 20]}]},
    {
      "name": "stadiums",
      "url": "https://raw.githubusercontent.com/StuvanFIT/Data-science/main/VegaLite/data/stadiums.csv",
      "format": {"type": "csv"},
      "transform": [
        {"type": "geopoint", "projection": "projection", "fields": ["longitude", "latitude"]}
      ]
    }
  ],
  "projections": [
    {"name": "projection", "type": "equalEarth", "fit": {"signal": "data('world')"}, "size": {"signal": "[width, height]"}}
  ],
  "scales": [
    {"name": "color", "type": "linear", "domain": {"data": "stadiums", "field": "capacity"}, "range": {"scheme": "reds"}}
  ],
  "legends": [
    {"title": "Capacity", "fill": "color", "gradientLength": 200}
  ],
  "marks": [
    {
      "type": "shape",
      "from": {"data": "world"},
      "encode": {"update": {"fill": {"value": "#f2efe9"}, "stroke": {"value": "#ccc"}}},
      "transform": [{"type": "geoshape", "projection": "projection"}]
    },
    {
      "type": "shape",
      "from": {"data": "graticule"},
      "encode": {"update": {"stroke": {"value": "#94a3b8"}, "strokeWidth": {"value": 0.4}, "fill": {"value": null}, "opacity": {"value": 0.5}}},
      "transform": [{"type": "geoshape", "projection": "projection"}]
    },
    {
      "type": "symbol",
      "from": {"data": "stadiums"},
      "encode": {
        "update": {
          "x": {"field": "x"},
          "y": {"field": "y"},
          "size": {"value": 500},
          "fill": {"scale": "color", "field": "capacity"},
          "stroke": {"value": "white"},
          "strokeWidth": {"value": 0.5},
          "opacity": {"value": 0.8},
          "tooltip": {"signal": "{'Stadium': datum.venueLabel, 'Team': datum.clubLabel, 'Country': datum.country, 'Capacity': format(datum.capacity, ',')}"}
        }
      }
    }
  ]
}